{
  "name": "coli-ana",
  "version": "0.0.1",
  "description": "API to decompose DDC numbers",
  "repository": {
    "type": "git",
    "url": "https://github.com/gbv/coli-ana.git"
  },
  "main": "server.js",
  "type": "module",
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "test": "npm run empty-config; NODE_ENV=test mocha --exit --timeout 10000 --slow 2000",
    "lint-staged": "lint-staged",
    "dev": "npm run empty-config; nodemon --experimental-json-modules server",
    "build": "npm run empty-config; npm run build:client && npm run build:server",
    "build:client": "vite build --ssrManifest --outDir dist/client",
    "build:server": "vite build --ssr src/entry-server.js --outDir dist/server; mv dist/server/entry-server.js dist/server/entry-server.cjs",
    "serve": "cross-env NODE_ENV=production node --experimental-json-modules server",
    "debug": "npm run empty-config; node --experimental-json-modules --inspect-brk server",
    "empty-config": "([ ! -e ./config/config.user.js ] && echo \"export default {}\" > ./config/config.user.js) || :"
  },
  "lint-staged": {
    "**/*.js": [
      "eslint --fix"
    ],
    "**/.*.js": [
      "eslint --fix"
    ]
  },
  "pre-commit": "lint-staged",
  "author": "Jakob Vo√ü <voss@gbv.de>",
  "license": "MIT",
  "dependencies": {
    "cross-fetch": "^3.0.6",
    "express": "^4.17.1",
    "jskos-tools": "^1.0.16",
    "vue": "^3.0.5",
    "vue-router": "^4.0.3"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^1.1.4",
    "@vue/compiler-sfc": "^3.0.5",
    "@vue/server-renderer": "^3.0.5",
    "compression": "^1.7.4",
    "cross-env": "^7.0.3",
    "eslint": "^7.20.0",
    "eslint-config-gbv": "^1.0.1",
    "eslint-plugin-vue": "^7.6.0",
    "lint-staged": "^10.5.4",
    "mocha": "^8.3.0",
    "mocha-eslint": "^7.0.0",
    "nodemon": "^2.0.7",
    "pre-commit": "^1.2.2",
    "serve-static": "^1.14.1",
    "vite": "^2.0.1"
  }
}
